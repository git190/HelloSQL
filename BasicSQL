from world


--ðŸ’¦ length è®¡ç®—å­—ç¬¦ä¸²é•¿åº¦
SELECT name, capital
  FROM world
 WHERE LENGTH(name) = length(capital)



--ðŸ’¦ limitï¼Œå–æ•°ã€‚ä»…åœ¨MySQLä¸­ä½¿ç”¨ï¼Œå¸è½½
 SELECT name,  capital
FROM world
order by name
limit 3,4  -- ä»Žç¬¬3+1è¡Œå¼€å§‹ï¼Œå–4è¡Œï¼Œåˆ°ç¬¬7è¡Œ
limit 3  -- å–å‰ä¸‰è¡Œ



-- ðŸ’¥ðŸ’¥ðŸ’¥æŸ¥è¯¢å’Œæ›¿æ¢
-- æå–nameåŽç¼€ï¼Œç”Ÿäº§ä¸€åˆ—extension
SELECT name, SUBSTRING(capital, LENGTH(name) + 1) AS extension
FROM world
WHERE capital LIKE CONCAT(name, '%') 
  AND LENGTH(capital) > LENGTH(name);
