SELECT winner,yr,subject FROM nobel
 where winner like 'Sir%' 
 order by yr desc, winner asc  -- å…ˆyearåˆ—é™åºï¼Œå†winenrå‡åº 

-- ðŸ’¦ORDER BY subject in ,è¿”å›žå¸ƒå°”å€¼ï¼ˆtrueæˆ–falseï¼‰
  -- ä¸åœ¨åŒ–å­¦å’Œç‰©ç†çš„è¿”å›žFalseï¼Œå†æŒ‰ç…§subjecté»˜è®¤å‡åºï¼ŒTrueåœ¨FalseåŽé¢ï¼Œè‡ªç„¶å°±æŽ’åœ¨æœ€åº•ä¸‹
  ORDER BY subject in ('chemistry ', 'physics '),subject,winner 

